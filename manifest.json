{
  "manifest_version": 3,
  "name": "LinkedIn Hide Dismissed",
  "description": "Hide LinkedIn job listings that you have already dismissed.",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/icon.png"
  },
  "icons": {
    "32": "images/icon.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.linkedin.com/jobs",
        "https://www.linkedin.com/jobs/*"
      ]
    }
  ]
}
